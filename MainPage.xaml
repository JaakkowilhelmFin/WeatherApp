<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.MainPage">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Weather Details" FontSize="24" HorizontalOptions="Center" />

        <!-- Minimum Temperature -->
        <Label x:Name="minTempLabel" Text="Min Temp: " FontSize="Medium" />

        <!-- Maximum Temperature -->
        <Label x:Name="maxTempLabel" Text="Max Temp: " FontSize="Medium" />

        <!-- Rain Data -->
        <Label x:Name="rainLabel" Text="Rain: " FontSize="Medium" />
    </StackLayout>
</ContentPage>
